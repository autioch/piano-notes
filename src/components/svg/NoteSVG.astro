---
import type { Note as NoteType } from "../../types/piano";
const { note, x, y, width, height, color } = Astro.props as {
  note: NoteType;
  x: number;
  y: number;
  width: number;
  height: number;
  color: string;
};
---

<g class="note-svg" transform={`translate(${x}, ${y - height / 2})`}>
  <rect
    x={0}
    y={0}
    width={width}
    height={height}
    rx={4}
    ry={4}
    fill={color}
    stroke="#222"
    stroke-width="0.5"></rect>
  <text
    x={4}
    y={height / 2 + 3}
    font-size={Math.min(10, height * 0.6)}
    fill="#111">{typeof note.pitch === "number" ? note.pitch : note.pitch}</text
  >
</g>
