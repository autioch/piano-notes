---
import Note from "./Note.astro";
import type { Bar, Pitch, SheetMusic } from "../types/piano";
import Staff from "./Staff.astro";
import ViolinKey from "./ViolinKey.astro";
import ClefKey from "./ClefKey.astro";

type Props = {
  sheetMusic: SheetMusic;
};

const { key, meter } = Astro.props.sheetMusic;
---

<Staff width={40} />
{
  key === "bass" ? (
    <g transform="translate(14,4.25)">
      <ClefKey />
    </g>
  ) : null
}
{
  key === "violin" ? (
    <g transform="translate(10,17),scale(1.2)">
      <ViolinKey />
    </g>
  ) : null
}
<g style="font-size: 12px;font-family: sans-serif">
  <g>
    <text transform="translate(23,12)">{meter[0]}</text>
  </g>
  <g>
    <text transform="translate(23,24)">{meter[1]}</text>
  </g>
</g>
